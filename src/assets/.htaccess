<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redireciona tudo que não for arquivo ou pasta para index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.html [L]

    # Opcional: desativa listagem de diretórios
    Options -Indexes
</IfModule>